{
    "name": "SvelteKit",
    "description": "Default ruleset for SvelteKit projects",
    "include": {
        "directories": [
            {
                "pattern": "src/**",
                "type": "glob"
            },
            {
                "pattern": "static",
                "type": "glob"
            },
            {
                "pattern": "tests",
                "type": "glob"
            }
        ],
        "files": [
            {
                "pattern": "*.{js,ts,svelte}",
                "type": "glob"
            },
            {
                "pattern": "package.json",
                "type": "glob"
            },
            {
                "pattern": "svelte.config.js",
                "type": "glob"
            },
            {
                "pattern": "vite.config.js",
                "type": "glob"
            }
        ]
    },
    "exclude": {
        "directories": [
            {
                "pattern": "node_modules",
                "type": "glob"
            },
            {
                "pattern": "build",
                "type": "glob"
            },
            {
                "pattern": ".svelte-kit",
                "type": "glob"
            }
        ],
        "files": [
            {
                "pattern": "package-lock.json",
                "type": "glob"
            },
            {
                "pattern": "*.log",
                "type": "glob"
            }
        ]
    },
    "maxDepth": 10
}
