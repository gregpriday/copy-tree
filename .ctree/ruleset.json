{
    "name": "CopyTree",
    "description": "Custom ruleset for the copy-tree project",
    "include": {
        "directories": [
            {
                "pattern": "src/**",
                "type": "glob"
            },
            {
                "pattern": "rulesets",
                "type": "glob"
            }
        ],
        "files": [
            {
                "pattern": "*.php",
                "type": "glob"
            },
            {
                "pattern": "*.json",
                "type": "glob"
            }
        ]
    },
    "maxDepth": 10
}
